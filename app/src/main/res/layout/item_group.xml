<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_10_dp"
    app:cardElevation="@dimen/spacing_5_dp"
    app:cardCornerRadius="@dimen/spacing_10_dp">

    <LinearLayout
        android:id="@+id/itemGroup_layout"
        android:layout_width="@dimen/group_card_width"
        android:layout_height="@dimen/group_card_height"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <ImageView
                android:id="@+id/group_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_group_no_key_photo"/>
            <TextView
                android:id="@+id/cardView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/app_name"
                android:shadowColor="@color/colorDefaultBlack"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:padding="@dimen/spacing_10_dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/cardView_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_18_sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center" />
    </LinearLayout>
</android.support.v7.widget.CardView>